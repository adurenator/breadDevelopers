<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Layouts -->
    <style name="layout">
        <item name="android:background">@color/lacaixa_color</item>	<!-- Primary Green -->
    </style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>	<!-- primary_white -->
        <item name="android:background">@color/lacaixa_button</item>
        <item name="android:layout_margin">5sp</item>
    </style>

    <!-- Medium Button -->

    <style name="MediumButton" parent="Button">
        <item name="android:width">175sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BigButton" parent="Button">
        <item name="android:width">275sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
