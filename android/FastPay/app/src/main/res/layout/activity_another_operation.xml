<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout" >


    <Button
        android:id="@+id/get_money"
        android:text="@string/get_money"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/BigButton"/>
    <Button
        android:id="@+id/deposity_money"
        android:text="@string/deposity_money"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/get_money"
        style="@style/BigButton"/>


</RelativeLayout>
